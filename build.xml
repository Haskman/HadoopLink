<?xml version="1.0"?>

<project name="HadoopLink" basedir="." default="jar">

  <property environment="env"/>

  <!-- Global properties for this build -->
  <property name="jar.name" value="HadoopLink" />
  <property name="version" value="0.1.0"/>

  <!-- Directories -->
  <property name="build.dir" location="build" />

  <property name="src.dir" location="src" />
  <property name="src.java.dir" location="${src.dir}/java" />
  <property name="src.test.dir" location="${src.dir}/test" />

  <property name="classes.dir" location="${build.dir}/classes" />

  <target name="init">
    <tstamp/>

    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${build.dir}" />
    <mkdir dir="${classes.dir}" />

    <fail message="Please set the HADOOP_HOME environment variable to your Hadoop installation.">
      <condition>
        <not><isset property="env.HADOOP_HOME"/></not>
      </condition>
    </fail>

    <fail message="Please set the JLINK_PATH environment variable to the JLink path in your Mathematica installation.">
      <condition>
        <not><isset property="env.JLINK_PATH"/></not>
      </condition>
    </fail>

    <path id="classpath">
      <fileset dir="${env.HADOOP_HOME}">
        <include name="*.jar"/>
        <include name="lib/**/*.jar"/>
      </fileset>
      <fileset dir="${env.JLINK_PATH}">
        <include name="JLink.jar"/>
      </fileset>
    </path>
  </target>

  <target name="compile" depends="init" description="compile the source">
    <!-- Compile the java code from ${src.java} into ${build} -->
    <javac srcdir="${src.java.dir}" destdir="${classes.dir}"
      debug="${java.debug}" debuglevel="lines,vars,source">
      <classpath refid="classpath"/>
    </javac>
  </target>

  <target name="jar" depends="compile" description="generate the distribution">
    <mkdir dir="HadoopLink/Java"/>
    <delete file="HadoopLink/Java/${jar.name}-${version}.jar"/>
    <jar jarfile="HadoopLink/Java/${jar.name}-${version}.jar">
      <fileset dir="${classes.dir}"/>
    </jar>
  </target>

  <target name="clean" description="clean up">
    <!-- Delete the ${build} and ${dist} directory trees -->
    <delete dir="${build.dir}"/>
    <delete dir="${classes.dir}"/>
    <delete dir="HadoopLink/Java"/>
  </target>
</project>
